{
  "compilerOptions": {
    "target": "ES2018",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "ES6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "preserveSymlinks": true,
    "baseUrl": ".",
    "declaration": true,
    "outDir": "dist",
    "paths": {
      "@react-three/postprocessing": ["./"]
    }
  },
  "include": ["./types/**/*", "./src/**/*"],
  "exclude": ["./node_modules/**/*"]
}
