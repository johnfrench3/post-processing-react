{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "preserveSymlinks": true,
    "baseUrl": "./",
    "declaration": true,
    "outDir": "dist/cjs",
    "paths": {
      "*": ["types/*"]
    }
  },
  "include": ["./types/**/*", "./src/**/*"],
  "exclude": ["./node_modules/**/*"]
}
